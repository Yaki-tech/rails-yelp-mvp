<h1>Restaurants</h1>

<ul class="list-group">
  <% @restaurants.each do |restaurant| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= restaurant.name %>
      <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-sm btn-outline-primary" %>
    </li>
  <% end %>
</ul>
